        display: flex;
        width: 80%;
        height: 100%;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
    }
    .header_link{
        margin: 0px 20px;
    }
    a{
        text-decoration: none;
        color: black;
    }
    #cont{
