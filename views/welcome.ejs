        align-items: center;
        background: black;
    }

    p{
        color: white;
    }

    button{
        background: rgb(230, 0, 255);
        border: none;
        width: 300px;
        height: 50px;
        border-radius: 20px;
        font-size: 30px;
        color: white;
        cursor: pointer;
    }

