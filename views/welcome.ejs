    *{
        margin: 0;
        padding: 0;
    }
    section{
        display: flex;
        align-items: center;
        flex-direction: column;
        width: 100%;
        height: 100vh;
    }
    nav{
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 100%;
        height: 5%;
        flex-direction: row;
        background: black;
    }
    #izq{
        display: flex;
